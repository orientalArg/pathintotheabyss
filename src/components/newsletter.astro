---
const {newsletter} = Astro.props;
const {title, desc, form} = newsletter;
---

<section class="newsletter">
  <div class="content">
    <div class="desc">
      <h2 class="title">{title}</h2>
      <small><b>{desc}</b></small>
    </div>
    <div>
      <form action="">
        <div class="email">
          <input type="email" placeholder={form.placeholder}>
          <button type="submit"><h4 class="title">{form.btn}</h4></button>
        </div>
        <div class="checkbox">
          <input type="checkbox" name="" id="">
          <small>{form.consent}</small>
        </div>
        <div class="checkbox">
          <input type="checkbox" name="" id="">
          <small>{form.terms}</small>
        </div>
      </form>
    </div>
  </div>
</section>

<style lang="scss">
.newsletter {
  padding-top: 4vw;
  padding-bottom: 4vw;
  background-color: black;
  .content {
    gap: 2em;
    display: flex;
    margin: auto 0 ;
    justify-content: space-between;
    .desc {
      max-width: 50%;
      display: flex;
      max-width: 450px;
      flex-direction: column;
      justify-content: space-between;
    }
    form {
      max-width: 440px;
      input {
        color: grey;
        border: 1px solid var(--grey);
        background: var(--darkgrey);
      }
      .email {
        position: relative;
        margin-bottom: 1em;
        input {
          width: 100%;
          height: 45px;
          padding-left: 1em;
        }
        button {
          top: 2px;
          right: 2px;
          height: 41px;
          position: absolute;
          border-radius: 0px;
          background: var(--gd-violet);
          align-items: center;
          display: flex;
        }
      }
      .checkbox {
        gap: 1em;
        display: flex;
        margin-bottom: 1em;
        input {
          min-width: 22px;
          min-height: 22px;
          color-scheme: dark;
          accent-color: var(--grey);
        }
      }
    }
  }
  @media (max-width:1000px) {
    .content {
      gap: 3em;
      margin: 0 auto;
      display: flex;
      max-width: 600px;
      flex-direction: column;
      .desc, form {
        width: 100%;
        max-width: 100%;
      }
    }
  }
}
</style>