---
const {gameplay} = Astro.props;
const {features, intro, title} = gameplay;
---
<section class="gameplay" id="gameplay">
  <div class="content">
    <div class="_title">
      <h1 class="title">{title}</h1>
      <small>{intro}</small>
    </div>
    <ul class="list">
      {features.map((a) => <li><p>{a.p}</p></li> )}
    </ul>
  </div>
  <div class="video">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/9s-5tR0fGfM" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
  </div>
</section>

<style lang="scss">
  .gameplay {
    gap: 10vw;
    height: 770px;
    display: flex;
    overflow: hidden;
    padding-top: 2vw;
    justify-content: space-between;
    background-position: top center;
    background-image: url(/images/tunnel.svg);
    background-size: cover;
    .content {
      gap: 10vw;
      display: flex;
      max-width: 440px;
      flex-direction: column;
      justify-content: center;
      ._title .title {
        text-transform: uppercase;
      }
      .list {
        padding: 0px;
        li {
          list-style: disc;
          color: var(--orange);
          p {
            margin: 1em 0;
            font-weight: 300;
          }
        }
      }
    }
    .video {
      z-index:3;
      width: 100%;
      height: 450px;
      margin: auto 0;
      position: relative;
      border-radius: 15px;
      &::before {
        top: 50%;
        left: 50%;
        z-index: -1;
        content: "";
        position: absolute;
        border-radius: 15px;
        width: calc(100% + 7vw);
        height: calc(100% + 7vw);
        background: var(--black);
        transform: translate(-50%,-50%);
      }
      iframe {
        width: auto;
        min-width :100%;
        min-height:100%;
        border-radius: 15px;
      }
    }
  }
  @media (max-width: 1000px) {
    .gameplay {
      height: auto;
      flex-direction: column;
      .content {
        max-width: 80%;
        margin: 0 auto;
        text-align: center;
        h1 {margin: 0 auto;}
        .list li {list-style: none;}
      }
      .video {
        width: 100%;
        margin: 0 auto;
        max-width: 750px;
      }
    }
  }
  @media (max-width: 800px) {
    .gameplay .video {
      height: auto;
    }
  }
</style>